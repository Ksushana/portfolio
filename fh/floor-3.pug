extends pug/layout.pug

block variables
  - let title = 'Искусные планировки';
  - let isInner = true;
  - let isFHPage = true;
  - let logoNoScroll = true;
  - let headerBackground = 'header__menu--fantastic';

block content
  .container.floors-container.blue-burger-container
    include pug/phone-icon.pug
    h1.title.title--page.title--big искусные планировки

    .choice
      .swiper-container.choice-container
      .swiper-wrapper.tabs-links
        a(href="plans.html")
          svg(width='26', height='8', viewbox='0 0 26 8', fill='none', xmlns='http://www.w3.org/2000/svg')
            path(d='M0.646446 3.64644C0.451185 3.84171 0.451185 4.15829 0.646446 4.35355L3.82843 7.53553C4.02369 7.73079 4.34027 7.73079 4.53553 7.53553C4.7308 7.34027 4.7308 7.02369 4.53553 6.82843L1.70711 4L4.53553 1.17157C4.7308 0.976309 4.7308 0.659726 4.53553 0.464464C4.34027 0.269202 4.02369 0.269202 3.82843 0.464464L0.646446 3.64644ZM26 3.5L1 3.5L1 4.5L26 4.5L26 3.5Z', fill='white', fill-opacity='0.5')
          | Вернуться к фасаду
        .swiper-slide
          a.switch-button( href="floor-1.html") 1-й этаж
        .swiper-slide
          a.switch-button( href="floor-2.html") 2-й этаж
        .swiper-slide
          a.switch-button.switch-button-active 3-й этаж
        .swiper-slide
          a.switch-button( href="floor-4.html") 4-й этаж
        .swiper-slide
          a.switch-button( href="floor-5.html") 5-й этаж

    section.floor.floor--3
      .floor__col.floor__col--left
        .floor__desc
          p.floor__number Этаж 3
          p.floor__text Возможно объединение квартир
      .floor__col.floor__col--center
        .floor__img
          p.floor__img-text.floor__img-text--left Малая Грузинская
          p.floor__img-text.floor__img-text--bottom Большой Тишинский переулок
          p.floor__img-text.floor__img-text--garden Сад
          a(href="floor-detail-3.1.html").floor__flat.floor__flat--1
            .floor__flat-number № 1<br>65 м<sup>2</sup>
          a(href="floor-detail-3.2.html").floor__flat.floor__flat--2
            .floor__flat-number № 2<br>98 м<sup>2</sup>
          a(href="floor-detail-3.3.html").floor__flat.floor__flat--3
            .floor__flat-number № 3<br>124 м<sup>2</sup>
          a(href="floor-detail-3.4.html").floor__flat.floor__flat--4
            .floor__flat-number № 4<br>164 м<sup>2</sup>
          a(href="floor-detail-3.5.html").floor__flat.floor__flat--5
            .floor__flat-number № 5<br>118 м<sup>2</sup>
          a(href="floor-detail-3.6.html").floor__flat.floor__flat--6
            .floor__flat-number № 6<br>63 м<sup>2</sup>
          a(href="floor-detail-3.7.html").floor__flat.floor__flat--7
            .floor__flat-number № 7<br>63 м<sup>2</sup>
          .floor__img-cover
            +flats-hover-3
            img(src='img/fh_floor_3.svg', alt='План этажа')
      .floor__col.floor__col--right
        .floor__compas
          span C
          svg(width='14', height='25', viewbox='0 0 14 25', fill='none', xmlns='http://www.w3.org/2000/svg')
