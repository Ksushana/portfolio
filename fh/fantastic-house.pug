extends pug/layout.pug

block variables
  - let title = "О нас";
  - let isInner = true;
  - let isFHPage = true;
  - let headerBackground = "header__menu--fantastic";

block content
  .fanastic-house.housing.gradient.slider-page
    include pug/phone-icon.pug
    section.main-screen.gradient-top
      picture
        source(media="(max-width: 767px)", srcset="img/main-building-2-mobile@1x.jpg 1x, img/main-building-2-mobile@2x.jpg 2x")
        source(media="(max-width: 1023px)", srcset="img/main-building-2-tablet@1x.jpg 1x, img/main-building-2-tablet@2x.jpg 2x")
        img(src="img/main-building-full-2@1x.jpg" alt="Фантастический дом" srcset="img/main-building-full-2@2x.jpg 2x")
      h1.visually-hidden Fantastic House
      span.arrow
        svg(width="57", height="96", viewbox="0 0 57 96", fill="none", xmlns="http://www.w3.org/2000/svg")
          path(d="M28.5756 22.4202V73.4296", stroke="white", stroke-width="3", stroke-linecap="round", stroke-linejoin="round")
          path(d="M40.9734 61.2415L28.5756 73.58L16.0265 61.2415", stroke="white", stroke-width="3", stroke-linecap="round", stroke-linejoin="round")
    section.text-content.text-content--small
      p.text-content__text Пишем об&nbsp;архитектуре и&nbsp;истории дома. Старинный доходный дом начала XX&nbsp;века, построен в&nbsp;1908 архитектором Василием Угличаниным в&nbsp;стиле неоклассического модерна. Композиция здания вписана в&nbsp;улицу&nbsp;&mdash; полукруглая часть стены, выходит на&nbsp;перекресток, обозначая его. У&nbsp;дома 3&nbsp;составляющие: угол дома&nbsp;&mdash; полукруглая часть стены, выходящая на&nbsp;перекресток бережно реставрируется. Воссоздается часть фасадов, которые расходятся по&nbsp;двум улицам, и&nbsp;сохраняется стена, которая 15&nbsp;уже там и&nbsp;стала частью архитектурного ансамбля. Восстановлен гипосвый барельеф и&nbsp;маски львов. Но&nbsp;с&nbsp;инженерно-технической точки зрения дом совершенно новый и&nbsp;идеальный.
    .housing__slider.gradient-bottom
      .housing__slider-container.img-content
        .housing__slides
          .housing__slider-slide
            img(src="img/house-1@1x.jpg" alt="Невероятные квартиры" srcset="img/house-1@2x.jpg 2x")
          .housing__slider-slide
            img(src="img/garden-1@1x.jpg" alt="Невероятные квартиры" srcset="img/garden-1@2x.jpg 2x")
          .housing__slider-slide
            img(src="img/lobby-1@1x.jpg" alt="Невероятные квартиры" srcset="img/lobby-1@2x.jpg 2x")
          .housing__slider-slide
            img(src="img/lobby-2@1x.jpg" alt="Невероятные квартиры" srcset="img/lobby-2@2x.jpg 2x")

      .count-cursor.count.visually-hidden
        span.back.visually-hidden
          svg( width="13" height="35" viewBox="0 0 20 37" fill="none" xmlns="http://www.w3.org/2000/svg" )
            path( d="M9.8999 1.90002V35.8" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" )
            path( d="M18.1001 27.7L9.9001 35.9L1.6001 27.7" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" )
        span.current 1
        span  /
        span.total
        span.next
          svg( width="13" height="35" viewBox="0 0 20 37" fill="none" xmlns="http://www.w3.org/2000/svg" )
            path( d="M9.8999 1.90002V35.8" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" )
            path( d="M18.1001 27.7L9.9001 35.9L1.6001 27.7" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" )

block footer
  .footer-inner
    a.footer-inner__link.button(href="#") Выбрать невероятную квартиру
